# Server Configuration
NODE_ENV=development
PORT=3001
API_BASE_URL=http://localhost:3001

# Database Configuration (PostgreSQL/Supabase)
DB_HOST=aws-0-us-east-1.pooler.supabase.com
DB_PORT=6543
DB_NAME=postgres
DB_USER=postgres.your-project-ref
DB_PASSWORD=your-supabase-password
DB_SSL=true

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Administrator Account (Pre-seeded)
ADMIN_EMAIL=admin@atlasnetwork.com
ADMIN_USERNAME=admin
ADMIN_PASSWORD=AdminPassword123!

# Platform Configuration (Defaults - can be changed via admin panel)
MAX_PARTICIPANTS=999999999
PLATFORM_DURATION_DAYS=0
RECRUITMENT_FEE=100
COMMISSION_LEVEL_1=10
COMMISSION_LEVEL_2=7
COMMISSION_LEVEL_3=5
COMMISSION_LEVEL_4=3
COMMISSION_LEVEL_5=2

# CORS Configuration
FRONTEND_URL=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Web3 Configuration
TRON_RPC_URL=https://api.trongrid.io
BSC_RPC_URL=https://bsc-dataseed.bnbchain.org
PLATFORM_WALLET_ADDRESS_TRON=YOUR_TRON_WALLET_ADDRESS
PLATFORM_WALLET_ADDRESS_BSC=YOUR_BSC_WALLET_ADDRESS
SIGNUP_FEE_USDT=20
